{
  "manifest_version": 2,
  "name": "MDBG Audio Monitor",
  "version": "1.0",
  "description": "Monitors for Audio files on MDBG and prompts for download, preserving original filenames",
  "permissions": [
    "https://www.mdbg.net/*",
    "webRequest",
    "webRequestBlocking",
    "downloads"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://www.mdbg.net/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/favicon16.ico",
    "24": "icons/favicon24.ico",
    "32": "icons/favicon32.ico"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "mdbg-mp3-monitor@example.com",
      "strict_min_version": "57.0"
    }
  }
}